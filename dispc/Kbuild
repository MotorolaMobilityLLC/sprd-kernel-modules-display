CONFIG_DRM_SPRD_DUMMY := n
CONFIG_DRM_SPRD_WB_DEBUG := n
CONFIG_UNISOC_GSP := m
endif

ifeq ($(BSP_MODULE_DISP_VERSION),sp9832e)
